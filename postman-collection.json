  "event": [
    {
      "listen": "prerequest",
      "script": {
        "id": "auth-prerequest",
        "type": "text/javascript",
        "exec": [
          "// This script runs before each request to check authentication",
          "",
          "const authRequests = [",
          "    'Register User',",
          "    'Login',",
          "    'Refresh Token'",
          "];",
          "",
          "const requestName = pm.info.requestName;",
          "",
          "// Skip auth for auth endpoints",
          "if (authRequests.includes(requestName)) {",
          "    return;",
          "}",
          "",
          "// Check if we have an access token",
          "if (!pm.collectionVariables.get('accessToken')) {",
          "    console.log('No access token found. Please login first.');",
          "}"
        ]
      }
    }
  ]
